- if flash[:error]
  = flash[:error]

.row
  .small-8.small-offset-2.columns
    = semantic_form_for profile, :html => {:multipart => true, :"data-abide" => ''} do |f|
      .form_wrapper
        .row
          .small-6.columns
            %h2 
              Your profile for
              = profile.year
            = f.input :year, :as => :hidden
            = f.input :agent_id, :as => :hidden
        .row
          .small-6.columns= f.input :surname, input_html: {required: ''}
        .row
          .small-6.columns= f.input :age, input_html: {required: ''}
        .row
          .small-6.columns= f.input :location, input_html: {required: ''}
        .row
          .small-6.columns= f.input :missionname, input_html: {required: ''}
        .row
          .small-10.columns
            - if f.object.avatar?
              = image_tag f.object.avatar.url(:thumb)
              = f.input :avatar, :label => "Change profile picture" 
            - else
              = f.input :avatar, :label => "Profile picture" , input_html: {required: ''}
        .row
          .small-6.columns= f.input :theme,  input_html: {disabled: ''}, hint: 'Themes may return later.'
        .row
          .small-6.columns= f.input :currency, :label => "Default currency"
        .row
          .small-6.columns= f.input :dateformat, :label => raw('Date format (<a href="http://www.wetware.co.nz/blog/2009/07/rails-date-formats-strftime/" target="_blank">Explanation</a>)')
  
        .row
          .small-6.columns= f.input :freetext, :label => "Free text for profile page"
        .row
          .small-6.columns= f.input :shortfilms, :label => 'Allow separate page for short films'
        .row
          .small-6.columns= f.input :theme_settings, :label => "Custom CSS"
        .row
          .small-6.columns= f.submit 'Save', class: [:button, :small]